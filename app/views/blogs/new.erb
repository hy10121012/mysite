
<div class="gap_space">
</div>
<div class="blog_container">
  <%= form_for :blog ,url: blogs_path do |blog| %>

      <div>
        <%= blog.label(:cover_label, "名称") %>
        <%= blog.text_field :title %>
      </div>
      <div>
        <%= blog.label(:cover_label, "内容") %>
        <%= blog.text_area :content, :style=>"width:40%;height:400px;" %>
      </div>
      <div>
        <%= blog.label(:cover_label, "标题图片") %>
        <%= blog.file_field :cover %>
      </div>
      <div>
        <%= blog.text_field :tag1, :name=>'tags[]' %>
        <%= blog.text_field :tag2, :name=>'tags[]'%>
        <%= blog.text_field :tag3, :name=>'tags[]' %>
      </div>
      <div>
        <%= blog.submit  %>
      </div>
  <% end %>
</div>