<div id="gallery_area" class="gallery_area" style="background-color:  #FFFFFF;text-align: left;padding: 20px;" >
  <%= form_for("gallery", method: "post") do |f| %>
      <div class="actions">
        <%= f.label :name_field,"name"%>
        <%= f.text_field :name,:style => 'padding:5px;width:300px' %><br />
        <%= f.label :description_name,"description"%>
        <%= f.text_area :description,:style => 'padding:5px;width:500px;height:500px' %>
        <%= f.submit("save") %>
      </div>
  <% end %>





</div>